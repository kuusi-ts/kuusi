{
  "tasks": {
    "dev": "deno --watch -A src/index.ts",
    "prod": "deno -A src/index.ts"
  },
  "imports": {
    "kuusi": "./kuusi/index.ts",
    "kuusi/env": "./kuusi/env.ts",
    "kuusi/types": "./kuusi/types.ts",
    "$routes/": "./routes/",
    "$src/": "./src/",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelcase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-assign",
        "no-eval"
      ]
    }
  }
}
